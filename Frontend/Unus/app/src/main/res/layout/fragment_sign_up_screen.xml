<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <Space
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_margin="30dp"
        android:contentDescription="@string/logo_content_description"
        android:src="@drawable/ic_uno_logo"
        />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        />

    <TextView
        android:id="@+id/signup_header"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="@string/signup_header"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/signup_status"
        android:layout_height="50dp"
        android:layout_width="fill_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:text="@string/login_header"
        android:textAlignment="center"

        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/signup_username_field"
        android:layout_height="50dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="30dp"
        android:hint="@string/username_hint"
        />

    <TextView
        android:id="@+id/signup_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:text="@string/signup_description"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/signup_password_field"
        android:layout_height="50dp"
        android:layout_width="fill_parent"
        android:layout_marginHorizontal="30dp"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/signup_confirm_password_field"
        android:layout_height="50dp"
        android:layout_width="fill_parent"
        android:layout_marginHorizontal="30dp"
        android:hint="@string/confirm_password_hint"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/signup_button"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="0.15"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="30dp"
        android:text="@string/login_button_text"
        android:backgroundTint="#ED1C24"
        android:textColor="#F8DA27"
        android:textStyle="bold"
        />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        />

</LinearLayout>