<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundColor"
    >

    <Button
        android:id="@+id/backbutton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/back"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="?attr/colorSecondary"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:text="@string/admin_screen"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="?attr/colorPrimary"
            android:id="@+id/friend_reqs"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/admin_users"
                android:id="@+id/users"
                android:backgroundTint="?attr/buttonTint"
                android:textColor="?attr/colorSecondary"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/admin_lobbies"
                android:id="@+id/lobbies"
                android:backgroundTint="?attr/colorSecondary"
                android:textColor="?attr/buttonTint"
                />
            <Button
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/teams_button"
                android:id="@+id/teams"
                android:backgroundTint="?attr/colorSecondary"
                android:textColor="?attr/buttonTint"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            >

            <EditText
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:id="@+id/searchbar"
                android:hint="@string/searchid"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:textColorHint="@color/white"

                />
            <Button
                android:id="@+id/clear_button"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:text="@string/clear"
                android:backgroundTint="?attr/buttonTint"
                android:textColor="?attr/colorSecondary"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                />
            <Button
                android:id="@+id/search_button"
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:text="@string/search"
                android:backgroundTint="?attr/buttonTint"
                android:textColor="?attr/colorSecondary"
                />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:id="@+id/results"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>